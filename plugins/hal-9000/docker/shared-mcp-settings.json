{
  "$schema": "https://claude.ai/settings-schema.json",
  "$comment": "HAL-9000 Worker MCP Settings - Connect to parent's ChromaDB server with authentication",

  "theme": "dark",
  "preferredNotificationChannel": "terminal",
  "verbose": false,

  "mcpServers": {
    "chromadb": {
      "command": "chroma-mcp",
      "args": [
        "--client-type", "http",
        "--host", "localhost",
        "--port", "8000"
      ],
      "env": {
        "CHROMA_ANONYMIZED_TELEMETRY": "false",
        "CHROMA_CLIENT_AUTH_PROVIDER": "chromadb.auth.token_authn.TokenAuthClientProvider",
        "CHROMA_CLIENT_AUTH_CREDENTIALS_FILE": "/run/secrets/chromadb_token"
      }
    },

    "memory-bank": {
      "command": "npx",
      "args": ["-y", "@allpepper/memory-bank-mcp@0.2.2"],
      "env": {
        "MEMORY_BANK_ROOT": "/data/membank"
      }
    },

    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking@2025.12.18"]
    }
  }
}
