{
  "name": "session-tools",
  "description": "Session management commands for Claude Code. Save, load, and manage work sessions with context preservation across conversations.",
  "version": "1.0.0",
  "author": {
    "name": "Hal Hildebrand",
    "url": "https://github.com/hal.hildebrand"
  },
  "repository": "https://github.com/hal.hildebrand/hal-9000",
  "license": "Apache-2.0",
  "homepage": "https://github.com/hal.hildebrand/hal-9000",
  "keywords": [
    "session-management",
    "context-preservation",
    "workflow",
    "productivity"
  ],
  "commands": {
    "check": {
      "file": "commands/check.md",
      "description": "Save current session context for later resumption"
    },
    "load": {
      "file": "commands/load.md",
      "description": "Load a previously saved session"
    },
    "sessions": {
      "file": "commands/sessions.md",
      "description": "List all saved sessions with metadata"
    },
    "session-delete": {
      "file": "commands/session-delete.md",
      "description": "Delete a saved session"
    }
  },
  "install": {
    "steps": [
      {
        "name": "Create sessions directory",
        "command": "mkdir -p ${HOME}/.claude/sessions"
      }
    ]
  }
}
